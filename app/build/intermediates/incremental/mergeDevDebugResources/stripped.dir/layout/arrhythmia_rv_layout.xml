<?xml version="1.0" encoding="utf-8"?>
        
    
                 
                       
                                                                                
           
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/fbutton_color_clouds"
        android:layout_margin="@dimen/margin_two"
        android:layout_height="@dimen/margin_seventy" android:tag="layout/arrhythmia_rv_layout_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="@dimen/sixty">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/afib_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ssprolight"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_fourteen"
                    android:layout_centerInParent="true"
                    android:tag="binding_1"    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/afib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ssprolight"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_fourteen"
                    android:layout_centerInParent="true"
                    android:tag="binding_2"           />
            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightgrey"/>

    </LinearLayout>
         